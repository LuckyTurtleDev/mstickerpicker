*::-webkit-scrollbar {
	display: none;
}

* {
	box-sizing: border-box;
	scrollbar-width: none; {# nobody implements this despite firefox #}
}

body {
	background-color: {{ style.background_color }};
	color: {{ style.font_color }};
	margin: 0;
}

a {
	display: inline-block;
}

hr {
	color: {{ style.font_pale_color }};
	margin: 0;
}

.center {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.pack_title {
	font-size: 1rem;
	margin-left: 1ch
}

.sticker_box {
	display: grid;
	grid-template-columns: auto auto auto;
	column-gap: 2.5vw;
	row-gap: 2.5vw;
	justify-content: center;
	align-items: center;
}
.sticker_box img {
	height: 30vw; 
	width: 30vw;
	object-fit: contain; 
	text-align: center;
}

a.anchor {
	display: block;
	position: relative;
	top: -15vw;
	visibility: hidden;
}

.topbar {
	position: fixed;
	width: 100vw;
	height: 15vw;
	background: {{ style.background_color }};
}
.topbar * {
	padding: 0;
}
.topbar div {
	display: flex;
	height: 15vw;
}
.topbar img {
	height: 15vw;
	width: auto;
}
.topbar_space{
	height: 20vw;
}
